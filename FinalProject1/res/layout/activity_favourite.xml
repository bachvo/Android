<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favorite_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Favourite" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Goodbye World" />

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:background="@drawable/search_button_black"
            android:drawableLeft="@drawable/search"
            android:text="Search Location"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:width="100dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:background="@drawable/favorites_button"
            android:drawableLeft="@drawable/favorites"
            android:text="Favorites"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:width="90dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:background="@drawable/group_button_black"
            android:drawableLeft="@drawable/contacts"
            android:text="Contacts"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:width="90dp" />
    </TableRow>

</RelativeLayout>